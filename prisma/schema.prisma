// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  Pizza    Pizza?
}

model Pizza {
  id          String   @id @default(uuid())
  borderType  String
  sauceType   String
  ingredients String
  costumer    User     @relation(fields: [costumerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  costumerId  String   @unique
  Orders      Orders[]
  message     String?
  price       Int
}

model Orders {
  id      String @id @default(uuid())
  pizza   Pizza  @relation(fields: [pizzaId], references: [id])
  pizzaId String
  status  String
}
